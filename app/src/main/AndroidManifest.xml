<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.r2d2.doctorapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoctorApp">

        <!-- Sign up -->
        <activity android:name=".DoctorSignupActivity" />
        <activity android:name=".DoctorSignup2Activity" />
        <activity android:name=".PatientSignupActivity" />
        <activity android:name=".PatientSignup2Activity" />

        <!-- Doctors -->
        <activity android:name=".DoctorHomePageActivity"/>

        <!-- Doctor search -->
        <activity android:name=".FilterActivity"/>
        <activity android:name=".ExActivity"/>

        <!-- Log in -->
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Appointment booking -->
        <activity android:name=".AvailabilityActivity"/>

        <!-- Patients -->
        <activity
            android:name=".PatientHomeActivity"
            android:label="@string/activity_label_patient_home"
            android:launchMode="singleTop"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".PatientProfileActivity"
            android:label="@string/activity_label_patient_profile"
            android:launchMode="singleTop"
            android:parentActivityName=".PatientHomeActivity" />
        <activity
            android:name=".DoctorHistoryActivity"
            android:label="@string/activity_label_doctor_history"
            android:launchMode="singleTop"
            android:parentActivityName=".PatientHomeActivity" />

    </application>

</manifest>
